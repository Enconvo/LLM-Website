{
  "$schema": "https://enconvo.com/schemas/extension.json",
  "name": "llm_website",
  "version": "0.0.2",
  "description": "Top LLM Provider's Website",
  "title": "LLM Website",
  "icon": "icon.png",
  "author": "EnconvoAI",
  "categories": [
    "Chat"
  ],
  "license": "MIT",
  "type": "module",
  "commands": [
    {
      "name": "chatgpt",
      "icon": "chatgpt.png",
      "title": "ChatGPT Website",
      "description": "ChatGPT is a large language model developed by OpenAI.",
      "mode": "view",
      "commandType": "website",
      "taskRuntimeType": "webview",
      "preferences": [
        {
          "name": "url",
          "description": "The URL of the webpage",
          "type": "textfield",
          "title": "URL",
          "default": "https://chatgpt.com/?q={{input_text}}"
        },
        {
          "name": "window_size",
          "description": "The size of the webpage",
          "type": "textfield",
          "title": "Window Size",
          "default": "1000x700"
        }
      ]
    },
    {
      "name": "chatgpt_search",
      "icon": "chatgpt.png",
      "title": "ChatGPT Search Website",
      "description": "ChatGPT is a large language model developed by OpenAI.",
      "mode": "view",
      "commandType": "website",
      "taskRuntimeType": "webview",
      "preferences": [
        {
          "name": "url",
          "description": "The URL of the webpage",
          "type": "textfield",
          "title": "URL",
          "default": "https://chatgpt.com/?hints=search&q={{input_text}}"
        },
        {
          "name": "window_size",
          "description": "The size of the webpage",
          "type": "textfield",
          "title": "Window Size",
          "default": "1000x700"
        }
      ]
    },
    {
      "name": "claude",
      "icon": "claude.png",
      "title": "Claude Website",
      "description": "Claude is a large language model developed by Anthropic.",
      "mode": "view",
      "commandType": "website",
      "taskRuntimeType": "webview",
      "preferences": [
        {
          "name": "url",
          "description": "The URL of the webpage",
          "type": "textfield",
          "title": "URL",
          "default": "https://claude.ai/new"
        },
        {
          "name": "window_size",
          "description": "The size of the webpage",
          "type": "textfield",
          "title": "Window Size",
          "default": "1000x700"
        }
      ]
    }
  ],
  "dependencies": {
    "@enconvo/api": "^0.1.161"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "19.0.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "build": "enconvo",
    "dev": "enconvo --dev",
    "publish": "enconvo --publish"
  }
}
